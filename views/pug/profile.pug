html
  head
    title Profile page
    meta(name='description', content='Profile page')
    link#favicon(rel='icon', href='https://hyperdev.com/favicon-app.ico', type='image/x-icon')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.scss')
  body
    div(class='box')
      h2.center#welcome Welcome, #{username}!
      
      p full Name: #{name}
      p Username: #{username}
      p(style='margin-top: -20px;') Email: #{email}
      p(style='margin-top: -20px;') Dob: #{birthday}

      a(href='/logout' class='logout') Logout

   
    script(src='https://code.jquery.com/jquery-2.2.1.min.js', integrity='sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00=', crossorigin='anonymous')
    script(src='/public/client.js')
